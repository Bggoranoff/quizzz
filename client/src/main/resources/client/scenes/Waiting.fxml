<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="512.0" minWidth="768.0" prefHeight="512.0" prefWidth="768.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="16.0" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="32.0" />
            </padding>
         <children>
            <Label text="Waiting for other players to join..." textAlignment="CENTER" textOverrun="CLIP" wrapText="true" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="Monospaced Bold" size="48.0" />
               </font>
            </Label>
            <Label fx:id="counterLabel" text="24 players in room" textAlignment="CENTER" textOverrun="CLIP" wrapText="true" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="Monospaced Regular" size="24.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" style="-fx-font-size: 1.4em;" text="Start" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
            </Button>
         </children>
        </VBox>
    </center>
</BorderPane>
